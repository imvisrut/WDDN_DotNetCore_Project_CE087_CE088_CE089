@model Ecommerce.Models.Product
@{
    ViewBag.Title = "Product List";
}

<section class="m-5">
    <h1 class="mb-5">@Model.Name</h1>
    <div class="row">
        <div class="col-6">
            <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img class="d-block w-100" src="@Model.MainImageURL" alt="First slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.ImageURL1" alt="Second slide">
                    </div>
                    <div class="carousel-item">
                        <img class="d-block w-100" src="@Model.ImageURL2" alt="Third slide">
                    </div>
                </div>
                <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="sr-only">Previous</span>
                </a>
                <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="sr-only">Next</span>
                </a>
            </div>
        </div>
        <div class="col-6">
            <h2>Price : @Model.Price₹</h2>
            <p>@Model.Description</p>
            <a href="/Cart/AddToCart?product_id=@Model.Id" class="btn d-block btn-warning">Add to Cart</a>
        </div>
    </div>
</section>
