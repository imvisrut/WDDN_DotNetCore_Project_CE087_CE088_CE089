@using Microsoft.AspNetCore.Identity
@using Ecommerce.Areas.Identity.Data

@inject SignInManager<EcommerceAppUser> SignInManager
@inject UserManager<EcommerceAppUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a class="nav-link active" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">
                Hello
                @User.Identity.Name!
            </a>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout"
                  asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button type="submit" class="btn btn-outline-danger">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link active mx-3" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link active mx-2" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
</ul>
